@baseUrl = http://localhost:3000/api/auth
@contentType = application/json

### 1. Login as User - Valid Credentials
# @name login_user
POST {{baseUrl}}/login
Content-Type: {{contentType}}

{
    "email": "user@example.com",
    "password": "user123"
}

### 2. Extract token from user login response
@userAuthToken = {{login_user.response.body.token}}

### 3. Login as Admin - Valid Credentials
# @name login_admin
POST {{baseUrl}}/login
Content-Type: {{contentType}}

{
    "email": "admin@example.com",
    "password": "admin123"
}

### 4. Extract token from admin login response
@adminAuthToken = {{login_admin.response.body.token}}

### 5. Login with Invalid Credentials
POST {{baseUrl}}/login
Content-Type: {{contentType}}

{
    "email": "invalid@example.com",
    "password": "wrongpassword"
}

### 6. Login with Missing Fields
POST {{baseUrl}}/login
Content-Type: {{contentType}}

{
    "email": "user@example.com"
}

### 7. Login with Invalid Format
POST {{baseUrl}}/login
Content-Type: {{contentType}}

{
    "email": "not-an-email",
    "password": "test123"
}

### 8. Get Current User (Me) with Cookie
GET {{baseUrl}}/me
Cookie: auth_token={{userAuthToken}}

### 9. Get Current User (Me) with Bearer Token
GET {{baseUrl}}/me
Authorization: Bearer {{userAuthToken}}

### 10. Get Current User (Me) with No Authentication
GET {{baseUrl}}/me

### 11. Verify Token with Cookie
GET {{baseUrl}}/verify
Cookie: auth_token={{userAuthToken}}

### 12. Verify Token with No Token
GET {{baseUrl}}/verify

### 13. Verify Token with Invalid Token
GET {{baseUrl}}/verify
Cookie: auth_token=invalid.token.here

### 14. Logout with Cookie
POST {{baseUrl}}/logout
Cookie: auth_token={{userAuthToken}}

### 15. Verify Logout Cleared Token
GET {{baseUrl}}/me
Cookie: auth_token={{userAuthToken}} 